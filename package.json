{
  "name": "garbados-blog",
  "description": "Words as thought by meat.",
  "homepage": "https://garbados.github.io/my-blog",
  "version": "1.0.0-beta",
  "private": true,
  "scripts": {
    "start": "npm run build",
    "test": "npm run build && npm audit",
    "prebuild": "mkdir -p static fonts",
    "build": "run-p build:*",
