    "build:fonts": "cp node_modules/font-awesome/fonts/* fonts/",
    "build:images": "cp src/img/* static/",
    "new-entry": "./bin.js new-entry",
    "clean": "rm entries/*.md *.html; npm run build",
    "watch": "watch 'npm run build' src entries",
    "share": "npx dat share ."
